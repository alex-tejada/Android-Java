<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developer.tonny.design.Activities.Ajustes">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textView_InformacionTit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/textView_InformacionTit"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:id="@+id/textView_NombreInf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/textView_NombreInf"
        android:textSize="18sp"
        android:layout_below="@+id/textView_InformacionTit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <EditText
        android:id="@+id/txtNombreInf"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_NombreInf"
        android:layout_alignStart="@+id/textView_NombreInf"
        android:layout_below="@+id/textView_NombreInf"
        android:ems="10"
        android:inputType="textPersonName"
        android:lineSpacingExtra="12sp" />

    <TextView
        android:id="@+id/textView_FechaNacInf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNombreInf"
        android:layout_alignStart="@+id/txtNombreInf"
        android:layout_below="@+id/txtNombreInf"
        android:layout_marginTop="25dp"
        android:text="@string/textView_FechaNacInf"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnGuardarInf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="#E207071E"
        android:text="@string/btnGuardarInf"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/editText_Peso"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:freezesText="false"
        android:inputType="number"
        android:layout_below="@+id/editText_Estatura"
        android:layout_alignLeft="@+id/editText_Estatura"
        android:layout_alignStart="@+id/editText_Estatura"
        android:layout_marginTop="29dp" />

    <EditText
        android:id="@+id/editText_Estatura"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/button_Fecha"
        android:layout_alignLeft="@+id/textView_FechaNacInf"
        android:layout_alignStart="@+id/textView_FechaNacInf" />

    <Button
        android:id="@+id/button_Fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNombreInf"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/textView_FechaNacInf"
        android:layout_toRightOf="@+id/textView_FechaNacInf"
        android:background="#E207071E"
        android:text="@string/button_Fecha"
        android:textColor="@android:color/white" />

    <Spinner
        android:id="@+id/spinner_Estatura"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/editText_Estatura"
        android:layout_alignLeft="@+id/btnGuardarInf"
        android:layout_alignStart="@+id/btnGuardarInf"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <Spinner
        android:id="@+id/spinner_Peso"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/editText_Peso"
        android:layout_alignLeft="@+id/spinner_Estatura"
        android:layout_alignStart="@+id/spinner_Estatura"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editText_NumeroEmergencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_Peso"
        android:layout_alignStart="@+id/editText_Peso"
        android:layout_below="@+id/editText_Peso"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="23dp"
        android:hint="@string/editText_NumeroEmergencia"
        android:ems="10"
        android:inputType="number" />

</RelativeLayout>
