<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_ejercicio"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/exerciseabs" />

    <TextView
        android:id="@+id/textView_ejercicioTit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_ejercicio"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/imageView_ejercicio"
        android:layout_toRightOf="@+id/imageView_ejercicio"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_ejercicioDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_ejercicio"
        android:layout_alignLeft="@+id/textView_ejercicioTit"
        android:layout_alignStart="@+id/textView_ejercicioTit"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"/>

</RelativeLayout>